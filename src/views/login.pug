extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username", type="text", required, placeholder="Username")
        input(name="password", type="password", required, placeholder="Password")
        input(type="submit", value="Join")
        
        include partials/social-login
    //- a(href="https://github.com/login/oauth/authorize?client_id=78539b05882ca563de77&allow_signup=false&scope=user:email") Continue with Github &rarr;
    //- scope parameta에 따라 요구하는 정보들이 달라짐

    div.auth-switch
        span Don't have an account?   
        a(href="/join") Create one now &rarr;